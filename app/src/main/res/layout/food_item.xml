<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp"
    android:paddingHorizontal="15dp"
    android:layout_height="110dp">

    <LinearLayout
        android:id="@+id/item"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/white_square"
        android:backgroundTint="@color/white"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name"
                android:layout_width="250dp"
                android:layout_height="25sp"
                android:text="Max Burger"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/description"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:maxWidth="250dp"
                android:textColor="#BFBFBF"
                android:text="  Original sendvich, kartoshka fri, 0.4 kola, tanlash uchun sous"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/cost"
                android:layout_width="150dp"
                android:layout_height="25sp"
                android:layout_marginTop="5dp"
                android:text="28 000 so'm"
                android:textColor="?colorPrimary"
                android:textStyle="bold" />
        </LinearLayout>

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="80dp"
            app:cardCornerRadius="12dp"
            android:backgroundTint="#ebe2d1"
            >
            <ImageView
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:id="@+id/image"
                android:layout_gravity="center" />
        </androidx.cardview.widget.CardView>


    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="1.3dp"
        android:background="#C4C1C1"
        android:layout_gravity="bottom"/>
</FrameLayout>